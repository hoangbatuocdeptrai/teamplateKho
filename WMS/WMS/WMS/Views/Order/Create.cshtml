@{
	ViewData["Title"] = "Create";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
	<div class="row">
		<div class="col-lg-12 col-12">
			<div class="box">
				<div class="box-header with-border">
					<h4 class="box-title">Đơn hàng</h4>
				</div>
				<!-- /.box-header -->
				<form class="form">
					<div class="box-body">
						@*<h4 class="box-title text-info mb-0"><i class="ti-user me-15"></i> Personal Info</h4>
						<hr class="my-15">*@
						<div class="row">
							<div class="col-md-12">
								<div class="form-group">
									<label class="form-label">Mã khách hàng</label>
									<input type="text" class="form-control" placeholder="Mã khách hàng">
								</div>
							</div>
							<div class="col-md-4">
								<label class="form-label">Tên Sản Phẩm</label>
							</div>
							<div class="col-md-3">
								<label class="form-label">Số lượng</label>
							</div>
							<div class="col-md-4">
								<label class="form-label">Giá</label>
							</div>
							<div class="col-md-1">

							</div>
							<div id="formContainer">
								<div class="row">
							<div class="col-md-4 col-sm-12">
								<div class="form-group">
									
									<input type="text" class="form-control" placeholder="Tên sản phẩm">
								</div>
							</div>
							<div class="col-md-3 col-sm-12">
								<div class="form-group">
									
									<input type="text" class="form-control" placeholder="Số lượng">
								</div>
							</div>
							<div class="col-md-3 col-sm-12">
								<div class="form-group">
									
									<input type="text" class="form-control" placeholder="Giá">
								</div>
							</div>
							<div class="col-md-2 col-sm-12">
										<a href="javascrip:void(0)" onclick="addForm()" style="float:right;" class="btn btn-primary" id="addButton">Thêm</a>
							</div>
								</div>
							</div>
						<div class="form-group">
							<label class="form-label">Giá trị đơn hàng</label>
							<input type="text" class="form-control" placeholder="giá trị đơn hàng">
						</div>
						<div class="form-group">
							<label class="form-label">Ghi chú</label>
							<textarea rows="5" class="form-control" placeholder="About Project"></textarea>
						</div>
					</div>
					<!-- /.box-body -->
					<div class="box-footer">
						<button type="button" class="btn btn-warning me-1">
							<i class="ti-trash"></i> Cancel
						</button>
						<button type="submit" class="btn btn-primary">
							<i class="ti-save-alt"></i> Save
						</button>
					</div>
				</form>
			</div>
			<!-- /.box -->
		</div>

	</div>
</section>

